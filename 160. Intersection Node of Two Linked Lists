 ListNode *getIntersectionNode(ListNode *headA, ListNode *headB) {
        
        if(!headA or !headB) return NULL;
        
        ListNode *tail=headA;
         while(tail->next!=NULL){
            tail=tail->next;
            tail->next=headB;
        
    }
        ListNode *ans= detectCycle(headA);   //first node of loop in Linked List
        tail->next= NULL;
        
        return ans;
        
        
        
    }
    
    
